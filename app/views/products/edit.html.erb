<h1>Редактировать товар</h1>

<%= form_with(model: @product, url: product_path(@product), method: :patch) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <%= form.submit 'Сохранить' %>
<% end %>